<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- manage file upload cacheing behavior -->

  <bean id="diskItemFileFactory" class="edu.ucla.cens.awserver.jee.fileupload.ServletContextAwareDiskFileItemFactory">
    <!-- items must be greater than 500kB before they are temporarily stored to disk -->
    <property name="sizeThreshold"><value>512000</value></property>
  </bean>

</beans>
