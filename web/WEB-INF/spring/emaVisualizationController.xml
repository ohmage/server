<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for HTML form-based prompt/survey response visualizations 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- create AwRequest from data in the HttpServletRequest -->
  <bean id="emaVizAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.EmaVizAwRequestCreator" />
    
  <!-- Controller -->
  <bean id="emaVizController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="emaVizService" />
      </list>
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="startDateValidator" />
        <ref bean="endDateValidator" />
      </list>      
    </property>
  </bean>
  
  <!-- Service the visualization request -->
  <bean id="emaVizService" class="edu.ucla.cens.awserver.service.SimpleQueryService">
    <constructor-arg index="0">
      <ref bean="emaQueryDao" />
    </constructor-arg>
  </bean>

  <!-- Interact with database -->
  <bean id="emaQueryDao" class="edu.ucla.cens.awserver.dao.EmaQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>
	
  <bean id="startDateValidator" class="edu.ucla.cens.awserver.validator.DateValidator">
    <constructor-arg index="0">
      <ref bean="emaVizFailedRequestAnnotator" />
    </constructor-arg>
    <constructor-arg index="1">
      <value>startDate</value>
    </constructor-arg>
    <constructor-arg index="2">
      <value>yyyy-MM-dd</value>
    </constructor-arg>
    <property name="errorMessage">
      <value>{"error_code":"0700","error_text":"invalid start date"}</value>
    </property>
  </bean>	

  <bean id="endDateValidator" class="edu.ucla.cens.awserver.validator.DateValidator">
    <constructor-arg index="0">
      <ref bean="emaVizFailedRequestAnnotator" />
    </constructor-arg>
    <constructor-arg index="1">
      <value>endDate</value>
    </constructor-arg>
    <constructor-arg index="2">
      <value>yyyy-MM-dd</value>
    </constructor-arg>
    <property name="errorMessage">
      <value>{"error_code":"0700","error_text":"invalid end date"}</value>
    </property>
  </bean>	
	
  <!--  Annotate the AwRequest in the case of failed visualization -->	
  <bean id="emaVizFailedRequestAnnotator" class="edu.ucla.cens.awserver.validator.FailedRequestAnnotator" />

</beans>