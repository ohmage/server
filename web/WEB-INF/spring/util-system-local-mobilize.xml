<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  
  <!-- this really belongs somewhere else -->
  <bean id="serverErrorRequestAnnotator" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg index="0"> 
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="0103" />
        <property name="text" value="general error" />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- 
    this makes application properties accessible to the rest of the beans in the app via ${}-style variable references instead
    of the ref element 
  --> 
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="propertiesArray">
      <list>
        <ref bean="dbProps" />
        <ref bean="systemProps" />
      </list>
    </property>
  </bean>
  
  <util:map id="dbProps">
    <entry key="db.driver" value="com.mysql.jdbc.Driver"/>
    <entry key="db.jdbcurl" value="jdbc:mysql://localhost:3306/andwellness"/>
    <entry key="db.username" value="andwellness"/>
    <entry key="db.password" value="&amp;!sickly"/>
  </util:map>
    
  <util:map id="systemProps">
    <entry key="system.imageDir" value="/Users/selsky/opt/aw2/userdata/images" />
    <!-- using the default promptResponseSharingState, which is private -->
    <!-- using the default campaignCreationPrivilege, which is true -->
  </util:map>
  
</beans>