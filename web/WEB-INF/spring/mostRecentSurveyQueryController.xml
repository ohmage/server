<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for HTML form-based prompt/survey response visualizations 
  -->
  
  <!-- Servlet-to-AW hooks -->
  
  <!-- Write outbound data -->
  <bean id="mostRecentSurveyQueryResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.MostRecentSurveyQueryResponseWriter" />
  
    
  <!-- Controller -->
  <bean id="mostRecentSurveyQueryController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="mostRecentSurveyQueryService" />
      </list>
    </constructor-arg>
    <property name="featureName"><value>most recent survey query</value></property>
  </bean>
  
  <!-- Service the query request -->
  <bean id="mostRecentSurveyQueryService" class="edu.ucla.cens.awserver.service.MostRecentSurveyQueryService">
    <constructor-arg index="0">
      <ref bean="userRoleCacheService" />
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="singleUserMostRecentSurveyQueryDao" />
    </constructor-arg>
    <constructor-arg index="2">
      <ref bean="multiUserMostRecentSurveyQueryDao" />
    </constructor-arg>
  </bean>

  <!-- Interact with database -->
  <bean id="singleUserMostRecentSurveyQueryDao" class="edu.ucla.cens.awserver.dao.SingleUserMostRecentSurveyQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>
  <bean id="multiUserMostRecentSurveyQueryDao" class="edu.ucla.cens.awserver.dao.MultiUserMostRecentSurveyQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>
  
</beans>