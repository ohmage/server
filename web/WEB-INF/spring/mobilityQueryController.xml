<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration the data point API 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- "pre-validate" inbound data -->
  <bean id="mobilityQueryHttpServletRequestValidator" class="edu.ucla.cens.awserver.jee.servlet.validator.MobilityQueryValidator" />
  <!-- create AwRequest from data in the HttpServletRequest -->
  <bean id="mobilityQueryAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.MobilityQueryAwRequestCreator" />
  <!-- write outbound data, post-controller --> 
  <bean id="mobilityQueryResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.MobilityQueryResponseWriter">
    <constructor-arg index="0"><ref bean="severeErrorResponse" /></constructor-arg>
  </bean>
    
  <!-- Controller - Many components used in the controller are shared with dataPointQueryController -->
  <bean id="mobilityDataPointQueryController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="tokenBasedAuthenticationService" />
        <ref bean="mobilityQueryUserCheckService" />
        <ref bean="mobilityQueryService" />
     </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="startDateValidator" />
        <ref bean="userTokenValidator" />
      </list>      
    </property>
    <property name="featureName"><value>mobility query</value></property>
  </bean>
    
  <bean id="mobilityQueryUserCheckService" class="edu.ucla.cens.awserver.service.MobilityQueryUserCheckService">
   <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="1000" />
            <property name="text" value="invalid user in query" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="edu.ucla.cens.awserver.dao.FindAllAdminCampaignsForUserDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
        <constructor-arg index="1"><value>true</value></constructor-arg>
      </bean>
    </constructor-arg>
     <constructor-arg index="2">
      <bean class="edu.ucla.cens.awserver.dao.FindAllCampaignsForUserDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
        <constructor-arg index="1"><value>false</value></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="mobilityQueryService" class="edu.ucla.cens.awserver.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean id="mobilityQueryDao" class="edu.ucla.cens.awserver.dao.MobilityQueryDao">
        <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
</beans>